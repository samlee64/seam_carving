{
  "name": "seam-carving",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node lib/main.js",
    "start:watch": "nodemon",
    "tslint": "tslint -c tslint.json --project tsconfig.json",
    "build": "rm -rf lib && npm run transpile",
    "transpile": "tsc ",
    "bic": "build-if-changed",
    "prettier": "prettier  --write './src/**/*.ts'",
    "pre-commit-prettier": "prettier --check './src/**/*.ts'",
    "up": "docker-compose up -d",
    "down": "docker-compose down --remove-orphans"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "aws-sdk": "^2.681.0",
    "db-migrate": "^0.11.11",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^8.0.8",
    "koa-send": "^5.0.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.4.1",
    "@types/koa-send": "^4.1.2",
    "@types/koa__cors": "^3.0.1",
    "build-if-changed": "^1.5.5",
    "husky": "^4.2.5",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run bic && npm run start",
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tslint && npm run pre-commit-prettier && npm run transpile"
    }
  }
}
